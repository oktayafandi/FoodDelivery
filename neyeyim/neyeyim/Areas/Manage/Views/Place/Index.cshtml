@using neyeyim.Models;
@model List<Place>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";

    int i = 0;
}

<div class="container-fluid">

    <table class="table table-bordered">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-2">Ad</th>
                <th class="col-md-2">Ünvanlar</th>
                <th class="col-md-2">Əlaqə</th>
                <th class="col-md-1">Status</th>
                <th class="col-md-1">Dərəcə</th>
                <th class="col-md-1">Kampaniya sayı</th>
            </tr>
        </thead>

        <tbody>
           @foreach (var item in Model)
            {
                i++;
            <tr class="row">
                <td class="col-md-1">@i</td>
                <td class="col-md-2">@item.Name</td>
                <td class="col-md-2">@item.Adress</td>
                <td class="col-md-2">@item.ContactPhone</td>
                <td class="col-md-1">@item.Status</td>
                <td class="col-md-1">@item.Rate</td>
                <td class="col-md-1">@item.Campaigns.Count()</td>
            </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>