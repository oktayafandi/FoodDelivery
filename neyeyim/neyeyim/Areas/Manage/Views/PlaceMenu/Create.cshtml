@model PlaceMenu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="@Model.FoodName">Məhsulun adı</label>
                <input type="text" asp-for="@Model.FoodName" class="form-control" id="FoodName">
                <span asp-validation-for="@Model.FoodName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.FoodContent">Məhsulun kontenti</label>
                <input type="text" asp-for="@Model.FoodContent" class="form-control" id="FoodContent">
                <span asp-validation-for="@Model.FoodContent" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.FoodPrice">Məhsulun qiyməti</label>
                <input type="text" asp-for="@Model.FoodPrice" class="form-control" id="FoodPrice">
                <span asp-validation-for="@Model.FoodPrice" class="text-danger"></span>
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.MenuCategoryId">Menyu kateqoriyası</label>
                <select class="form-control" asp-for="@Model.MenuCategoryId" asp-items="ViewBag.MenuCategories">
                </select>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="@Model.PlaceId">Məkan</label>
                <select class="form-control" asp-for="@Model.PlaceId" asp-items="ViewBag.Places">
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Yarat</button>
    </form>
</div>