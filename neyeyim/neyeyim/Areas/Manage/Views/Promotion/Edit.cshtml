@model Promotion

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post">
        <div class="form-row">
            <div class="form-group">
                <label asp-for="@Model.ImageFile">Şəkil</label>
                <input asp-for="@Model.ImageFile" />
                <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
            </div>

            @if (Model.Image != null)
            {
                <div class="img-box" style="position:relative;max-width:200px">
                    <img class="d-block" src="~/uploads/img/@Model.Image" style="max-width:200px" />
                    <i class="fas fa-times remove-img-box" style="color:red;position:absolute;top:-7px;right:10px;cursor:pointer"></i>
                    <input type="hidden" name="Photo" value="@Model.Image" />
                </div>
            }

            <div class="form-group col-md-6">
                <label asp-for="@Model.RedirectUrl">Url</label>
                <input type="text" asp-for="@Model.RedirectUrl" class="form-control" id="RedirectUrl">
                <span asp-validation-for="@Model.RedirectUrl" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Redaktə et</button>
    </form>
</div>

