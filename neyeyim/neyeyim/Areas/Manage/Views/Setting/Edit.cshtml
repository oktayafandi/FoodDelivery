@model Setting

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="@Model.ContactPhone">Əlaqə üçün nömrə</label>
                <input type="text" asp-for="@Model.ContactPhone" class="form-control" id="ContactPhone">
                <span asp-validation-for="@Model.ContactPhone" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.InfoPhone">Məlumat üçün nömrə</label>
                <input type="text" asp-for="@Model.InfoPhone" class="form-control" id="InfoPhone">
                <span asp-validation-for="@Model.InfoPhone" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.ContactMail">Əlaqə üçün mail</label>
                <input type="text" asp-for="@Model.ContactMail" class="form-control" id="ContactMail">
                <span asp-validation-for="@Model.ContactMail" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.InfoMail">Məlumat üçün mailə</label>
                <input type="text" asp-for="@Model.InfoMail" class="form-control" id="InfoMail">
                <span asp-validation-for="@Model.InfoMail" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Adress">Ünvan</label>
                <input type="text" asp-for="@Model.Adress" class="form-control" id="Adress">
                <span asp-validation-for="@Model.Adress" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="@Model.WorkTime">İş saatı</label>
                <input type="text" asp-for="@Model.WorkTime" class="form-control" id="WorkTime">
                <span asp-validation-for="@Model.WorkTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.InstagramUrl">İnstagram</label>
                <input type="text" asp-for="@Model.InstagramUrl" class="form-control" id="InstagramUrl">
                <span asp-validation-for="@Model.InstagramUrl" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="@Model.FacebookUrl">Facebook</label>
                <input type="text" asp-for="@Model.FacebookUrl" class="form-control" id="FacebookUrl">
                <span asp-validation-for="@Model.FacebookUrl" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="@Model.TwitterUrl">Twitter</label>
                <input type="text" asp-for="@Model.TwitterUrl" class="form-control" id="TwitterUrl">
                <span asp-validation-for="@Model.TwitterUrl" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Redaktə et</button>
    </form>
</div>