@model Slider
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data" asp-action="create" asp-controller="slider">
        <div class="form-row">
                <div class="form-group">
                    <label asp-for="@Model.ImageFile">Şəkil</label>
                    <input asp-for="@Model.ImageFile" id="ImageFile" name="ImageFile" />
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.Order">Sıra</label>
                    <input type="text" asp-for="@Model.Order" class="form-control" id="Order" placeholder="Şəkilin sırası">
                    <span asp-validation-for="@Model.Order" class="text-danger"></span>
                </div>
        </div>
        <button type="submit" class="btn btn-primary">Yarat</button>
</form>
</div>