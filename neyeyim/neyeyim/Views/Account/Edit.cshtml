@model AppUser
@{
    ViewData["Title"] = "Edit";
}

<section class="register animate__animated animate__fadeIn" style="padding: 50px;">
    <div class="container">
        <div class="row">
            <div class="card col-lg-4 col-sm-12 col-xs-12">
                <form style="padding: 30px;" method="post">
                    <h1 class="logregcap">Hesabı redaktə et</h1>
                    <div class="mb-3">
                        <label asp-for="@Model.Name">Ad</label>
                        <input class="form-control" type="text" asp-for="@Model.Name" name="name">
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Surname">Soyad</label>
                        <input class="form-control" type="text" asp-for="@Model.Surname" name="surname">
                        <span class="text-danger" asp-validation-for="@Model.Surname"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.UserName">İstifadəçi adı</label>
                        <input class="form-control" type="text" asp-for="@Model.UserName" name="username">
                        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Email">Email</label>
                        <input class="form-control" type="email" asp-for="@Model.Email" name="email">
                        <span class="text-danger" asp-validation-for="@Model.Email"></span>
                    </div>
                    <div class="mb-3">
                        <label label asp-for="@Model.Password">Yeni şifrə</label>
                        <input class="form-control" type="password" asp-for="@Model.Password" name="password">
                        <span class="text-danger" asp-validation-for="@Model.Password"></span>
                    </div>
                    <div class="mb-3">
                        <label label asp-for="@Model.CurrentPassword">Şifrə</label>
                        <input class="form-control" type="password" asp-for="@Model.CurrentPassword" name="currentpassword">
                        <span class="text-danger" asp-validation-for="@Model.CurrentPassword"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-outlined" style="background-color: #009de0; color: white;">Redaktə et</button>
                </form>
            </div>
        </div>
    </div>
</section>