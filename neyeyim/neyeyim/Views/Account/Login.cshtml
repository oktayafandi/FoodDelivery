@model MemberLoginModel
@{
    ViewData["Title"] = "Login";
}

        <section class="login animate__animated animate__fadeIn" style="padding: 50px;">
            <div class="container">
                <div class="row">
                    <div class="card col-lg-4 col-sm-12 col-xs-12">
                        <form style="padding: 30px;" method="post">
                            <h1 class="logregcap">Daxil ol</h1>
                            <div class="mb-3">
                                <label asp-for="@Model.UserName">İstifadəçi adı</label>
                                <input asp-for="@Model.UserName" type="text" class="form-control">
                                <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.Password">Şifrə</label>
                                <input asp-for="@Model.Password" type="password" class="form-control">
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <button type="submit" class="btn btn-outlined" style="background-color: #009de0; color: white;">Daxil ol</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>