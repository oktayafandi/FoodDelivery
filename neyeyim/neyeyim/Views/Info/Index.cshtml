@model InfoViewModel

<div class="container ">
    <div class="row">
        @foreach (var item in Model.Information)
        {
            <div class="col-lg-8 col-md-12 col-md-12 mb-3 px-1 px-md-1 animate__animated animate__fadeInLeft">
                <div class="bizitanicard card" style="width: 100%; border-radius: 0px">
                    <div class="card-body">
                        <h1 class="card-text1" style="color: #009de0;">
                            "Nə yeyim?" komandası haqqında:
                        </h1>

                        <p class="card-text">
                            @item.Team
                        </p>

                        <h1 class="card-text1" style="color: #009de0;">
                            "Nə yeyim?" nə üçün istifadə olunur?
                        </h1>

                        <p class="card-text">
                            @item.WhatFor
                        </p>

                        <h1 class="card-text1" style="color: #009de0;">
                            "Nə yeyim?" necə istifadə olunur?
                        </h1>

                        <p class="card-text">
                            @item.HowUsed
                        </p>
                    </div>
                </div>
            </div>
         }

        @foreach (var item in Model.Promotions)
         {
            <div class="col-lg-4 animate__animated animate__fadeIn">
                <a asp-action="index" asp-controller="campaign">
                    <div class="col-lg-12" style="height: 100%">
                        <img class="promotion" src="uploads/img/@item.Image" alt=""
                             style="width: 100%; position: sticky !important; top: 1px" />
                    </div>
                </a>
            </div>
         }
    </div>
</div>
